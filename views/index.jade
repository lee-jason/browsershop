extends layout

block content
  h1= title
  p Welcome to the Browsershop Quartet
  p Looks like you're coming in from a #{browser} browser, that means you're playing the #{singer}
  div
    input(maxLength=5 id="groupName" value='#{groupName}')
    p share this with your quartet and press ready when you're good to go
    button(id="ready") ready UP!
    button(id="play") play
    audio(id="audio" controls)
      source(src="#{musicURL}" type="audio/mpeg")
    p #[span(id="bandName")] Band Members
    ul(class="memberList")
